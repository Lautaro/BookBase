<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BOOKBASE</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <style>

        body {
            background: url('https://wallpapercave.com/wp/QKgBmix.jpg') no-repeat center center fixed;
        }


        #searchBox {
            margin-top: 50px;
            background-color: #ccc;
            height: 50px;
            font-size: 20px;
            max-width: 1000px;
            color: #2084af;
        }

        #search-button {
            height: 40px;
        }

        .card {
            border: 3px solid rgba(255, 100, 0, 0.3);
            padding: 10px 20px;
            margin-bottom: 20px;
            border-radius: 25px;
            box-shadow: 10px 10px 5px #000;
            background-color: rgba(0, 0, 0, 0.7);
        }

        h4.card-header {
            color: #2084af;
            font-weight: 700;
        }

        h6, h5 {
            font-size: 18px;
            color: white;
        }

        h3 {
            color: aliceblue;
        }

        .card-body {
        }

        .card-header {
        }
    </style>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BOOKBASE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Search", "BookSearch", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color: white;">&copy; @DateTime.Now.Year BOOKBASE - Search for books. among all 12 books in bookbase</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
